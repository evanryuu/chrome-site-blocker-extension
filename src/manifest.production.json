{
    "manifest_version": 3,
    "name": "SiteBlocker",
    "version": "0.0.2",
    "description": "A Chrome extension to block distracting websites",
    "permissions": [
        "storage",
        "tabs",
        "webNavigation"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon.png",
            "32": "images/icon.png",
            "48": "images/icon.png",
            "128": "images/icon.png"
          }
    },
    "web_accessible_resources": [{
        "resources": ["options.html", "images/*.png"],
        "matches": ["<all_urls>"]
    }],
    "icons": {
        "16": "images/icon.png",
        "32": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
    },
    "background": {
        "service_worker": "js/background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["js/content.js"]
        }
    ]
}
